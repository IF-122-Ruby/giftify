.main.m-4
  .container-fluid
    h1.fw-bolder.mb-5.mt-5.text-center Gifts
    - @gifts.each do |gift|
      .col-lg-4.col-md-12.mb-4.text-center.btn
        .card.shadow.p-3.mb-5.bg-white.border-0.gifts-card
          = image_tag gift.image.url(:small), class: 'img-fluid'

          .card-body
            h5.card-title = gift.name
            p.card-text
              strong
                = gift.price
              | points
          .card-body
            = link_to 'Details', account_organization_gift_path(gift), class:"button btn btn-outline-secondary nav-btn posts__card-button"
            = link_to 'Get', account_rewards_get_reward_path(gift: gift), class:"button btn btn-outline-success nav-btn posts__card-button", method: :post

  .digg_pagination.pagination-position
      = will_paginate @gifts, container: false
