          = image_tag 'google.png', class: 'org-img google'

        .col-lg-4.offset-lg-4.col-md-4.offset-md-4.col-sm-5.offset-sm-2.col-6
          = image_tag 'facebook.png', class: 'org-img'

        .col-lg-4.offset-lg-4.col-md-4.offset-md-4.col-sm-5.offset-sm-4.col-6.offset-3
          = image_tag 'linkedin.png', class: 'org-img'

  section.head
    .head-rectangle
      h1.title ENJOY YOUR WORK AND HAVE FAN WITH US
      .head-content
        = image_tag 'teamwork-and-team-building.png', class: 'head-img'

