<h3 class="mb-3"><%= link_to 'Categories', posts_path, class: 'list-group-item list-group-item-action border-0' %></h3>
<div class="list-group">
  <% Category.all.each do |category| %>
    <%= link_to category.name, posts_path(category_name: category.name), class: set_class_for_category_link(category.name, params[:category_name]) %>
  <% end %>
</div>